generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  SELLER
}

model User {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  password   String
  role       Role       @default(USER)
  createdAt DateTime   @default(now()) @map("created_at")

  // Relations
  orders     Order[]    @relation("UserOrders")   // orders placed by the user
  products   Product[]  @relation("UserProducts") // products sold by the seller

  @@map("users")
}

model Product {
  id           Int        @id @default(autoincrement())
  name         String
  description  String?
  price        Float
  stock        Int
  createdAt   DateTime   @default(now()) @map("created_at")

  // Seller relation
  sellerId    Int @map("seller_id")
  seller       User       @relation("UserProducts", fields: [sellerId], references: [id])

  // Category relation (each product must belong to one category)
  categoryId  Int @map("category_id")
  category     Category   @relation(fields: [categoryId], references: [id])

  // Order items
  orderItems   OrderItem[]

  @@map("products")
}

model Category {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  products   Product[]  // each category can have many products

  @@map("categories")
}

model Order {
  id         Int        @id @default(autoincrement())
  createdAt DateTime   @default(now()) @map("created_at")
  total      Float

  // Buyer relation (required)
  userId    Int @map("user_id")
  user       User       @relation("UserOrders", fields: [userId], references: [id])

  // Items in the order
  orderItems OrderItem[]

  @@map("orders")
}

model OrderItem {
  id          Int       @id @default(autoincrement())
  quantity    Int
  unitPrice  Float @map("unit_price")
  subtotal    Float

  // Foreign keys
  orderId    Int @map("order_id")
  productId  Int @map("product_id")

  order       Order     @relation(fields: [orderId], references: [id])
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("order_items")
}